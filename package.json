{
  "name": "monorepo-template",
  "version": "1.0.0",
  "private": true,
  "description": "A monorepo template with DDD + Hexagonal Architecture, auth, deployment configs, and a Todo CRUD example",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "4.3.6",
      "@types/bun": "^1.3.4",
      "elysia": "1.4.19",
      "@elysiajs/eden": "1.4.5",
      "@elysiajs/cors": "1.4.0",
      "@better-auth/expo": "1.4.18",
      "better-auth": "1.4.18",
      "@tailwindcss/vite": "4.1.8",
      "tailwindcss": "4.1.18",
      "@vitejs/plugin-react": "5.1.2",
      "tsdown": "0.18.4",
      "vite": "7.3.0",
      "typescript": "5.9.3",
      "convex": "^1.31.2",
      "@convex-dev/react-query": "^0.1.0"
    }
  },
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "lint": "oxlint",
    "format": "oxfmt --write .",
    "format:tracked": "git ls-files | grep -E '\\.(ts|tsx|js|jsx|json|jsonc|md|mdx)$' | xargs oxfmt --write",
    "check": "bun run lint && bun run format",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:no-cache": "turbo run build --force",
    "check-types": "turbo run check-types",
    "dev:native": "turbo run dev -F native",
    "dev:web": "turbo run dev -F web",
    "dev:server": "turbo run dev -F server",
    "dev:fullstack-fn": "turbo run dev -F fullstack-fn-only",
    "dev:fullstack-convex": "turbo run dev -F fullstack-fn-and-convex",
    "dev:convex": "turbo run dev -F @monorepo-template/convex-api",
    "dev:convex:setup": "turbo run dev:setup -F @monorepo-template/convex-api",
    "dev:web-elysia": "turbo run dev -F web-elysia",
    "dev:server-elysia": "turbo run dev -F server-elysia",
    "customize": "bun scripts/customize.ts",
    "rename": "bun scripts/rename.ts",
    "db:command": "dotenvx run -f apps/<application>/.env -- turbo run db:command -F @monorepo-template/infra-db",
    "db:push": "dotenvx run -f apps/server/.env -- turbo run db:push -F @monorepo-template/infra-db",
    "db:studio": "dotenvx run -f apps/server/.env -- turbo run db:studio -F @monorepo-template/infra-db",
    "db:generate": "dotenvx run -f apps/server/.env -- turbo run db:generate -F @monorepo-template/infra-db",
    "db:migrate": "dotenvx run -f apps/server/.env -- turbo run db:migrate -F @monorepo-template/infra-db",
    "generate:convex-jwt-keys": "bun scripts/generate-convex-jwt-keys.ts"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251213.0",
    "@types/bun": "catalog:",
    "husky": "^9.1.7",
    "jose": "^6.1.3",
    "lint-staged": "^16.1.2",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*": [
      "oxlint",
      "oxfmt --write"
    ]
  },
  "packageManager": "bun@1.3.4"
}
